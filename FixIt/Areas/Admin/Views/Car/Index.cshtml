@model IEnumerable<CarViewModel>

@{
    ViewBag.Title = "All Cars";
}
<hr />

<div class="container">
    <h1>@ViewBag.Title</h1>
    <hr />
    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            There are no cars registered.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var car in Model)
            {
                <div class="col">
                    <div class="card">

                        <img src="@car.ImageUrl" class="card-img-top" alt="Car Image">

                        <div class="card-body">

                            <h5 class="card-title">@car.Make @car.Model</h5>


                            <p class="card-text">Registration Plate: @car.PlateNumber</p>


                            <div class="d-grid gap-2">
                                <a asp-area="Admin" asp-controller="CarAdmin" asp-action="CarDetails" asp-route-id="@car.Id" class="btn btn-primary">Details</a>
                                <a asp-area="Admin" asp-controller="CarAdmin" asp-action="CarHistory" asp-route-id="@car.Id" class="btn btn-secondary">Service History</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
