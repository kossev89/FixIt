@model CarViewModel
@{
    ViewBag.Title = "Delete Car";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <img src="@Model.ImageUrl" class="card-img-top" alt="Car Image">
                <h3 class="card-title text-center">@Model.Make</h3>
                <p class="mb-0"><strong>Car Model:</strong> @Model.Model</p>
                <p class="text-danger mt-3">"Are you sure you want to delete this car?"</p>
            </div>
            <div class="card-footer">
                <form asp-area="Admin" asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />
                    <button type="submit" class="btn btn-danger" asp-area="Admin" asp-controller="Customer" asp-action="DeleteConfirmed">Confirm Delete</button>
                    <a asp-area="Admin" asp-controller="Customer" asp-action="CustomerDetails" asp-route-id="@Model.UserId" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
