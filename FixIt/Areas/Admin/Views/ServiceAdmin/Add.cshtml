@using FixIt.Infrastructure.Data.Enumerators
@model ServiceFormModel

@{
    ViewBag.Title = "Add New Service";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="Admin" asp-controller="ServiceAdmin" asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Type" class="form-label-add-edit">Select Service Type</label>
                @Html.DropDownListFor(m => m.Type, Enum.GetNames(typeof(ServiceType)).Select(t => new SelectListItem { Text = t, Value = t }), "Select Service Type", new { @class = "form-control", aria_required = "true" })
            </div>
            <div class="mb-3">
                <input asp-for="@Model.Description" class="form-control" aria-required="false" placeholder="Add service description (optional)" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label-add-edit">Price</label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" placeholder="Enter Service Price" type="number" step="0.01" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}