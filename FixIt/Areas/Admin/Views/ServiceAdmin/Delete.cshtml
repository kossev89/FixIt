@model ServiceViewModel
@{
    ViewBag.Title = "Delete Service?";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Type</h3>
                <p class="mb-0"><strong>Description:</strong> @Model.Description</p>
                <p class="mb-0"><strong>Price:</strong> @Model.Price</p>
                <input type="hidden" name="Id" value="@Model.Id" />
                <p class="text-danger mt-3">"Are you sure you want to delete this service?"</p>
            </div>
            <div class="card-footer">
                <form asp-area="Admin" asp-controller="ServiceAdmin" asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger" asp-area="Admin" asp-controller="ServiceAdmin" asp-action="DeleteConfirmed">Confirm Delete</button>
                    <a asp-area="Admin" asp-controller="ServiceAdmin" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
