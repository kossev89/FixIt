@model AppointmentViewModel
@{
    ViewBag.Title = "Accept Appointment?";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Car.Make @Model.Car.Model</h5>
                <p class="card-text">Registration Plate: @Model.Car.PlateNumber</p>
                <p class="card-text">Service Type: @Model.ServiceType</p>
                <p class="card-text">Technician: @Model.TechnicianName</p>
                <p class="card-text">Date And Time: @Model.DateAndTime.ToString(DateValidationFormat)</p>
                <p class="card-text">Status: @Model.Status</p>
            </div>
            <div class="card-footer">
                <form asp-area="Admin" asp-action="AcceptConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-primary" asp-area="Technician" asp-controller="AppointmentTechnician" asp-action="AcceptConfirmed">Accept Task?</button>
                    <a asp-area="Technician" asp-controller="AppointmentTechnician" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
