@model CarFormModel

@{
    ViewBag.Title = "Add a Car";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <form asp-action="Add" method="post">
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Make"></label>
                <input asp-for="Make" class="form-control" placeholder="Car manufacturer">
                <span asp-validation-for="@Model.Make" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="Car model">
                <span asp-validation-for="@Model.Model" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" placeholder="Year of production">
                <span asp-validation-for="@Model.Year" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PlateNumber"></label>
                <input asp-for="PlateNumber" class="form-control" placeholder="Plate number">
                <span asp-validation-for="@Model.PlateNumber" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Vin"></label>
                <input asp-for="Vin" class="form-control" placeholder="Vin number">
                <span asp-validation-for="@Model.Vin" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Mileage"></label>
                <input asp-for="Mileage" class="form-control" placeholder="Current Mileage">
                <span asp-validation-for="@Model.Mileage" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Image">
                <span asp-validation-for="@Model.ImageUrl" class="small text-danger"></span>
            </div>
        </div>
        <input class="btn btn-primary mt-3" type="submit" value="Add" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
