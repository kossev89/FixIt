@model IEnumerable<CarViewModel>

@{
    ViewData["Title"] = "My Cars";
}
<hr />

<div class="container">
    <h1>My Cars</h1>

    <a asp-controller="Car" asp-action="Add" class="btn btn-primary">Add a Car</a>
    <hr />
    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            You have no cars registered.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var car in Model)
            {
                <div class="col">
                    <div class="card">
                        
                        <img src="@car.ImageUrl" class="card-img-top" alt="Car Image">

                        <div class="card-body">
                            
                            <h5 class="card-title">@car.Make @car.Model</h5>
                            
                            
                            <p class="card-text">Registration Plate: @car.PlateNumber</p>

                            
                            <div class="d-grid gap-2">
                                <a asp-controller="Car" asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">Details</a>
                                <a asp-controller="Car" asp-action="Update" asp-route-id="@car.Id" class="btn btn-secondary">Edit</a>
                                <a href="#" class="btn btn-success">Book an Appointment</a>
                            </div>
                            <div class="mt-4">
                                <a asp-controller="Car" asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger">Remove a Car</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
