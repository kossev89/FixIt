@{
    ViewData["Title"] = "Home Page";
}

@if (User.IsInRole("Administrator"))
{
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="display-4 text-center">Welcome, Admin</h1>
            <div class="d-flex justify-content-between mt-5">
                <a asp-area="Admin" asp-controller="Customer" asp-action="Index" class="btn btn-primary btn-lg">Customers</a>
                <a asp-area="Admin" asp-controller="CarAdmin" asp-action="Index" class="btn btn-primary btn-lg">Cars</a>
                <a asp-area="Admin" asp-controller="AppointmentAdmin" asp-action="Index" class="btn btn-primary btn-lg">Appointments</a>
            </div>
        </div>
    </div>
    </div>
}
else if (User.IsInRole("Technician"))
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="display-4 text-center">Welcome, Technician</h1>
                <div class="d-flex justify-content-between mt-5">
                    <a asp-area="Technician" asp-controller="AppointmentTechnician" asp-action="Index" class="btn btn-primary btn-lg">My Appointments</a>
                    <a asp-area="Technician" asp-controller="AppointmentTechnician" asp-action="Tasks" class="btn btn-primary btn-lg">Tasks</a>
                    <a asp-area="Technician" asp-controller="AppointmentTechnician" asp-action="History" class="btn btn-primary btn-lg">History</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2 text-center">
                <h1 class="display-4">Welcome to FixIt - Your Car's Clinic</h1>
                <p class="lead">Where Your Car Receives Expert Care</p>
                <p>At FixIt, we understand the importance of keeping your car running smoothly. Our team of skilled technicians is here to provide top-notch service and repairs for all makes and models.</p>
                <p>Whether it's routine maintenance, diagnostics, or major repairs, trust FixIt to get the job done right.</p>
            </div>
        </div>
    </div>
}

